*
  box-sizing border-box
  margin 0
  padding 0

html, body
  width 100%
  height @width
body
  color the-copy
  font-family font-default
  font-size: font-size
  font-weight: font-light
a
  color the-link
  font-weight: font-bold
  text-decoration: none;
  transition: .3s
  &:hover
    text-decoration: underline;
iframe
  display: block;
iframe,img,video
  max-width 100%
p,ul,ol
  margin-bottom 1em
ul,ol
  margin-left: 0
